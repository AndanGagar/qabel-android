<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/checkMessageIn"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="20sp"
        android:layout_height="25sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/chat_in_left"/>

    <RelativeLayout
        android:id="@+id/chatTextLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/chat_in_round_box"
        android:orientation="vertical"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:layout_marginRight="40sp">

        <de.qabel.qabelbox.views.TextViewFont
            android:id="@+id/tvText"
            style="@style/ListSecondTextLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="This is an example Message"
            android:textColor="@color/white"/>

        <de.qabel.qabelbox.views.TextViewFont
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5sp"
            android:text="Fr. 15.39"
            android:textColor="@color/white"
            android:textSize="12sp"/>
    </RelativeLayout>
</LinearLayout>
